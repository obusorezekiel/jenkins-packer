{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "Application",
            "instance_type": "t2.micro",
            "region": "us-east-1",
            "secret_key": "{{user `aws_secret_key`}}",
            "security_group_ids":"sg-0732563f5405a5afc",
            "associate_public_ip_address":"true",
            "source_ami": "ami-0261755bbcb8c4a84",
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline":[
                "sudo -u ubuntu bash -c \"ssh-keygen -f ~/home/ubuntu/.ssh/id_rsa -N ''\"",
                "ssh-keyscan -t rsa github.com >> ~/.ssh/known_hosts",
                "sudo add-apt-repository ppa:openjdk-r/ppa",
                "sudo apt-get update -y",
                "sudo apt-get install -y openjdk-8-jdk",
                "java -version",
                "sudo apt install apt-transport-https ca-certificates curl software-properties-common -y",
                "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
                "sudo add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu focal stable\"",
                "sudo apt update -y",
                "sudo apt install docker-ce -y",
                "sudo mkdir -p /home/ubuntu/remoting",
                "sudo mkdir -p /home/ubuntu/workspace",
                "sudo chmod -R 777 /home/ubuntu/remoting",
                "sudo chmod -R 777 /home/ubuntu/workspace/",
                "sudo gpasswd -a $USER docker",
                "sudo systemctl enable docker"
            ]
        }
    ]
}